<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools= "http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:layout_marginBottom="2dp">

    <CheckBox
        android:id= "@+id/list_item_dibbit_done_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp" />



    <TextView
        android:id= "@+id/list_item_dibbit_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_item_dibbit_done_check_box"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="4dp"
        tools:text= "Assignment Name"/>

    <TextView
        android:id= "@+id/list_item_dibbit_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_item_dibbit_done_check_box"
        android:layout_below="@id/list_item_dibbit_title_text_view"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="4dp"
        android:layout_marginLeft="30dp"
        tools:text="Due Date"/>







</RelativeLayout>