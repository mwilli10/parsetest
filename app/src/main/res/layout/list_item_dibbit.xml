<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools= "http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

    <CheckBox
        android:id= "@+id/list_item_dibbit_done_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="5dp" />
    <TextView
        android:id= "@+id/list_item_dibbit_done_text_view"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textSize="10dp"
        android:textColor="@android:color/holo_blue_dark"
        tools:text= "Done"
        android:text="Done"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="0dp"
        android:layout_below="@+id/list_item_dibbit_done_check_box"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/list_item_dibbit_done_check_box"
        android:layout_alignStart="@+id/list_item_dibbit_done_check_box" />



    <TextView
        android:id= "@+id/list_item_dibbit_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="4dp"
        tools:text= "Assignment Name"
        android:layout_toLeftOf="@+id/list_item_dibbit_done_text_view"
        android:layout_toStartOf="@+id/list_item_dibbit_done_text_view" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id= "@+id/list_item_dibbit_task_text_view"
        android:layout_toLeftOf="@+id/list_item_dibbit_done_check_box"
        android:paddingTop="5dp"
        android:src="@mipmap/task_launcher"
        android:background="#FFFFFF"
        android:paddingRight="10dp" />

    <TextView
        android:id= "@+id/list_item_dibbit_date_text_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_dibbit_title_text_view"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="4dp"
        android:layout_marginLeft="30dp"
        tools:text="Due Date"
        android:paddingRight="0dp"
        android:layout_toLeftOf="@+id/list_item_dibbit_task_text_view"
        android:layout_toStartOf="@+id/list_item_dibbit_task_text_view" />


</RelativeLayout>